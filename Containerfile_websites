# Base stage: common image with httpd, entrypoint, and port
FROM ubuntu:latest AS base

RUN apt-get update && \
    apt-get install -y apache2 && \
    rm -rf /var/lib/apt/lists/*

EXPOSE 80

ENTRYPOINT ["apachectl", "-D", "FOREGROUND"]


# Website 1 image
FROM base AS website1
COPY website1.html /var/www/html/
LABEL website="1"

# Website 2 image
FROM base AS website2
COPY website2.html /var/www/html/
LABEL website="2"
